<div class="container">
	<div class="row center sign-up-form">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				<h3 class="header">Log In!</h3>
				<div class="row">
					<%= form_for(:sessions , html: {class: "col s12"}) do |f| %>

					  <div class="row">
					   	<div class="input-field s12">
					    <%= f.email_field :email , placeholder: 'Enter your Email' , autofocus: true %>
					    <%= f.label :email , class: 'active' %>
					    </div>  
                      </div>

					  <div class="row">
					  	<div class="input-field s12">
					    <%= f.password_field :password , placeholder: 'Choose a Password' , autofocus: true %>
					    <%= f.label :password , class: 'active'  %>
                        </div>
                      </div>

	          			<div class="row">
					   		<div class="input-field s12">
					    		<%= f.button 'Login' , class: 'btn orange waves-effect waves-light' %>
					    	</div>	
					    </div>		
					    </div>
					 </div>
					<% end %>
				</div>
			</div>	
		</div>	
	</div>	
</div>