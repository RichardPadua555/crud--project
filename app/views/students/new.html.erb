

<div class="container">
	<div class="row center sign-up-form">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				<h3 class="header">Sign up!</h3>
				<div class="row">
					<%= form_for(@student , html: {class: "col s12"}) do |f| %>
					  <div class="row">
					   	<div class="input-field s12">
							<%= f.text_field :name  , placeholder: 'Enter your Name' , autofocus: true %>
							<%= f.label :name %>
						</div>	
					  </div>

					  <div class="row">
					   	<div class="input-field s12">
					    <%= f.email_field :email , placeholder: 'Enter your Email' , autofocus: true %>
					    <%= f.label :email  %>
					    <div class="row">
					   		<div class="input-field s12">
					    		<%= f.submit 'Signup' , class: 'btn orange waves-effect waves-light '   %>
					    	</div>	
					    </div>		
					    </div>
					 </div>
					<% end %>
				</div>
			</div>	
		</div>	
	</div>	
</div>