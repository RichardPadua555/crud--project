<% if @student.errors.any? %>
	<div class="container">
		<div class="row sign-up-form">
			<div class="col s12 m12 l12">
				<div class="card-panel red lighten-2">
					<span class="white-text">
						<%= pluralize(@student.errors.count , 'Error')  %>
							Prohibited your account from being created
							<ul>
								<% @student.errors.full_messages.each do |message| %>
									<li><%= message %></li>
						        <% end %>
			           	   </ul>	
		           	</span>	
                </div>
            </div>
        </div>        
	</div>	
<% end %>


<div class="container">
	<div class="row center sign-up-form">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				<h3 class="header"><%= (@student.new_record? ? 'Sign up!' : 'Update!'  ) %></h3>
				<div class="row">
					<%= form_for(@student , html: {class: "col s12"}) do |f| %>
					  <div class="row">
					   	<div class="input-field s12">
							<%= f.text_field :name  , placeholder: 'Enter your Name' , autofocus: true %>
							<%= f.label :name %>
						</div>	
					  </div>

					  <div class="row">
					   	<div class="input-field s12">
					    <%= f.email_field :email , placeholder: 'Enter your Email' , autofocus: true %>
					    <%= f.label :email  %>
					    <div class="row">
					   		<div class="input-field s12">
					    		<%= f.submit(@student.new_record? ? 'Sign Up' : 'Update' , class: 'btn orange waves-effect waves-light') %>
					    	</div>	
					    </div>		
					    </div>
					 </div>
					<% end %>
				</div>
			</div>	
		</div>	
	</div>	
</div>